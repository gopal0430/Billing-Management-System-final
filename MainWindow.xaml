<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GDS Billing System"
        Height="600"
        Width="1000"
        Background="#f6f6f6"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Inputs -->
            <RowDefinition Height="Auto"/>
            <!-- Suggestion List -->
            <RowDefinition Height="*"/>
            <!-- Product Grid & Total -->
        </Grid.RowDefinitions>

        <!-- 🔹 Responsive Input Grid -->
        <Border CornerRadius="10"
                Background="WhiteSmoke"
                Padding="10"
                Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Product:"
                       VerticalAlignment="Center"
                       Grid.Column="0"
                       Margin="5,0"/>
                <TextBox x:Name="ProductTextBox"
                         Grid.Column="1"
                         Padding="4"
                         FontSize="14"
                         TextChanged="ProductTextBox_TextChanged"/>

                <!-- <Label Content="Rate:" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,0,0"/>
                <TextBox x:Name="RateTextBox"
                         Grid.Column="3"
                         Padding="4"
                         FontSize="14"
                         BorderBrush="#0078D7"
                         BorderThickness="1.5"
                         Visibility="Visible"/>

                <ComboBox x:Name="RateComboBox"
                          Grid.Column="9"
                          FontFamily="SunTommy y Tamil"
                          Visibility="Collapsed"
                          ItemsSource="{Binding RateOptions}"
                          SelectionChanged="RateComboBox_SelectionChanged"
                          PreviewKeyDown="RateComboBox_PreviewKeyDown"
                          Background="White"
                          FontSize="14"
                          Margin="10,0"/> -->
                <Label Content="Rate:"
                       VerticalAlignment="Center"
                       Grid.Column="2"
                       Margin="10,0,0,0"/>
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal">
                    <TextBox x:Name="RateTextBox"
                             Width="100"
                             Padding="4"
                             FontSize="14"
                             Visibility="Visible"/>
                    <ComboBox x:Name="RateComboBox"
                              Width="80"
                              Margin="10,0,0,0"
                              FontFamily="SunTommy y Tamil"
                              Visibility="Collapsed"
                              ItemsSource="{Binding RateOptions}"
                              SelectionChanged="RateComboBox_SelectionChanged"
                              PreviewKeyDown="RateComboBox_PreviewKeyDown"
                              Background="White"
                              FontSize="14"/>
                </StackPanel>

                <Label Content="Qty:"
                       VerticalAlignment="Center"
                       Grid.Column="4"
                       Margin="10,0,0,0"/>
                <TextBox x:Name="QuantityTextBox"
                         Grid.Column="5"
                         Padding="4"
                         FontSize="14"
                         KeyDown="QtyTxtBox_KeyDown"/>

                <CheckBox x:Name="SeparateRowsCheckBox"
                          Grid.Column="6"
                          Content="Separate Rows"
                          VerticalAlignment="Center"
                          Margin="10,0"/>

                <!-- <ComboBox x:Name="masalaComboBox"
                          Grid.Column="7"
                          FontSize="14"
                          VerticalAlignment="Center"
                          Margin="10,0"
                          HorizontalAlignment="Left"
                          MinWidth="100"
                          KeyDown="masalaComboBox_KeyDown">
                    <ComboBoxItem Content="சாம்பார் பொடி"
                            Tag="Sambar_Masala"/>
                    <ComboBoxItem Content="கறி மசாலா"
                            Tag="Kari_Masala"/>
                </ComboBox> -->
                <ComboBox x:Name="masalaComboBox"
                          Grid.Column="7"
                          FontSize="14"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          Margin="10,0"
                          MinWidth="100"
                          MaxWidth="300"
                          Width="Auto"
                          Loaded="masalaComboBox_Loaded"
                          KeyDown="masalaComboBox_KeyDown">
                    <ComboBoxItem Content="சாம்பார் பொடி"
                            Tag="Sambar_Masala"/>
                    <ComboBoxItem Content="கறி மசாலா"
                            Tag="Kari_Masala"/>
                </ComboBox>


                <Button x:Name="ClearButton"
                        Grid.Column="8"
                        Content="Clear"
                        Width="80"
                        Height="30"
                        Background="#ff5555"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Margin="10,0"
                        Click="ClearButton_Click"/>


            </Grid>
        </Border>

        <!-- Suggestion List, Product Grid, and Grand Total would follow here, as in previous layout -->
        <!-- DataList -->
        <DataGrid x:Name="ProductsDataList"
                  IsReadOnly="True"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="10"
                  VerticalAlignment="Top"
                  Height="200"
                  Visibility="Collapsed"
                  Loaded="ProductsDataList_Loaded"
                  PreviewKeyDown="ProductsDataList_PreviewKeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="PName"
                                    Header="Product Name"
                                    Binding="{Binding pname}"
                                    Width="*"
                                    FontFamily="SunTommy"/>
                <DataGridTextColumn Header="Rate"
                                    Binding="{Binding Rate2}"
                                    Width="*"/>
                <DataGridTextColumn Header="MRP"
                                    Binding="{Binding mrp}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Products DataGrid -->

        <DataGrid x:Name="ProductsDataGrid"
                  Grid.Row="2"
                  Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  PreviewKeyDown="ProductsDataGrid_PreviewKeyDown"
                  SelectionMode="Single"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  Style="{DynamicResource MetroDataGrid}"
                  CellEditEnding="ProductsDataGrid_CellEditEnding"
                  ItemsSource="{Binding LoadedProducts}">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background"
                            Value="LightGray"/>
                    <Setter Property="Foreground"
                            Value="Black"/>
                    <Setter Property="FontWeight"
                            Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="PNameNative"
                                    Header="Product"
                                    Binding="{Binding PName}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily"
                                    Value="SunTommy y Tamil"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="RATE"
                                    Binding="{Binding Rate2}"
                                    Width="*"/>
                <DataGridTextColumn Header="QTY"
                                    Binding="{Binding DisplayQuantity}"
                                    Width="*"
                                    FontFamily="SunTommy y Tamil"/>
                <DataGridTextColumn Header="TotalAmount"
                                    Binding="{Binding Total}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Grand Total Section -->
        <Border Grid.Row="2"
                Background="LightYellow"
                CornerRadius="10"
                Padding="10"
                Margin="0,150,0,0"
                VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Text="Grand Total: "
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="DarkBlue"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="GrandTotalTextBlock"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="DarkGreen"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
